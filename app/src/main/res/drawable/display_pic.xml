<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="293dp"
        android:height="293dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp"/>
            <solid android:color="@color/light"/>
            <stroke android:width="1dp" android:color="@color/dark"/>/>
        </shape>
    </item>

    <item android:gravity="center_horizontal"
        android:width="128dp"
        android:height="128dp"
        android:top="36dp">

        <shape android:shape="oval">
            <solid android:color="@color/dark10"/>
            <size android:width="128dp" android:height="128dp"/>
        </shape>
    </item>

    <item
        android:gravity="bottom"
        android:width="293dp"
        android:height="115dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="138dp" android:topRightRadius="138dp" android:bottomRightRadius="82dp" android:bottomLeftRadius="82dp"/>
            <solid android:color="@color/dark10"/>
            <size android:width="293dp" android:height="294dp"/>
            <padding android:top="177dp"/>
        </shape>
    </item>
</layer-list>