<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@color/light10"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/userDP"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/userFN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_extrabold"
                android:textSize="18sp"
                android:textColor="@color/dark10"
                android:letterSpacing="0.15"
                style="@style/shadow"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/userUN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                android:textColor="@color/dark10"
                android:letterSpacing="0.15"
                style="@style/shadow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="35dp">

                <TextView
                    style="@style/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:letterSpacing="0.35"
                    android:text="NOTIFICATION"
                    android:textColor="@color/dark10"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/alarm"
                    style="@style/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="0.35"
                    android:text="Alarm"
                    android:textColor="@color/dark10"
                    android:textSize="15sp"
                    android:thumb="@drawable/thumb"
                    app:track="@drawable/track" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/vibrate"
                    style="@style/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="0.35"
                    android:text="Vibrate"
                    android:textColor="@color/dark10"
                    android:textSize="15sp"
                    android:thumb="@drawable/thumb"
                    app:track="@drawable/track" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sound"
                    style="@style/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="0.35"
                    android:text="Sound"
                    android:textColor="@color/dark10"
                    android:textSize="15sp"
                    android:thumb="@drawable/thumb"
                    app:track="@drawable/track"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="12sp"
                    android:textColor="@color/dark10"
                    android:letterSpacing="0.35"
                    style="@style/shadow"/>

                <Button
                    android:id="@+id/changeUN"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/buton"
                    android:elevation="10dp"
                    android:text="Change username"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_extrabold"
                    android:textColor="@color/dark10"
                    style="@style/shadow"
                    android:letterSpacing="0.35"
                    android:layout_marginTop="15dp"/>

                <Button
                    android:id="@+id/changeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/buton"
                    android:elevation="10dp"
                    android:text="Change email"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_extrabold"
                    android:textColor="@color/dark10"
                    style="@style/shadow"
                    android:letterSpacing="0.35"
                    android:layout_marginTop="15dp"
                    android:layout_marginVertical="25dp"/>

                <Button
                    android:id="@+id/changePass"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/buton"
                    android:elevation="10dp"
                    android:text="Change password"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_extrabold"
                    android:textColor="@color/dark10"
                    style="@style/shadow"
                    android:letterSpacing="0.35"
                    />

                <Button
                    android:id="@+id/changePin"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/buton"
                    android:elevation="10dp"
                    android:text="Change pin"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_extrabold"
                    android:textColor="@color/dark10"
                    style="@style/shadow"
                    android:letterSpacing="0.35"
                    android:layout_marginVertical="25dp"/>
                <Button
                    android:id="@+id/DeleteAcc"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/buton"
                    android:backgroundTint="@color/error"
                    android:elevation="10dp"
                    android:text="Delete Account"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_extrabold"
                    android:textColor="@color/light10"
                    style="@style/shadow"
                    android:letterSpacing="0.35" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>