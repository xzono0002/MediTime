<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangeUsername"
    android:background="@color/light10"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toolbar"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/changeUN_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                app:srcCompat="@drawable/back_ios" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/inter_extrabold"
                android:letterSpacing="0.09"
                android:paddingStart="17dp"
                android:text="BACK"
                android:textAllCaps="true"
                android:textAppearance="@style/shadow"
                android:textColor="@color/light"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="46dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change your username"
                android:fontFamily="@font/inter_extrabold"
                android:textSize="16sp"
                android:textColor="@color/dark10"
                android:letterSpacing=".03"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your new username below"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                android:textColor="@color/dark20"
                android:letterSpacing=".03" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="28dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/changeUN_email"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/light_bg"
                android:fontFamily="@font/montserrat_bold"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:letterSpacing="0.05"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/dark10"
                android:textColorHint="@color/dark20"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/changeUN_oldUN"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/light_bg"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Old username"
                android:inputType="textPersonName"
                android:letterSpacing="0.05"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/dark10"
                android:textColorHint="@color/dark20"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/changeUN_newUN"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/light_bg"
                android:fontFamily="@font/montserrat_bold"
                android:hint="New username"
                android:inputType="textPersonName"
                android:layout_marginTop="7dp"
                android:letterSpacing="0.05"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/dark10"
                android:textColorHint="@color/dark20"
                android:textSize="11sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/light_bg"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/dark20">

                <EditText
                    android:id="@+id/changeUN_pass"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/light_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:letterSpacing="0.05"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/dark10"
                    android:textColorHint="@color/dark20"
                    android:textSize="11sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/changeUN_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.05"
                android:textColor="@color/error"
                android:textSize="11sp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/changeUN_btn"
            android:layout_width="224dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@drawable/buton"
            style="@style/shadow"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="0.15"
            android:text="CHANGE USERNAME"
            android:textAllCaps="true"
            android:textAppearance="@style/shadow"
            android:textColor="@color/dark10"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/changeUN_progress"
            android:layout_width="224dp"
            android:layout_height="33dp"
            android:background="@drawable/buton"
            android:indeterminateDrawable="@drawable/progress_bar_light"
            android:paddingVertical="5dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>