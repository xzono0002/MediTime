<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_item_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/custom_day"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_weight="1"
        android:background="@drawable/add_med_pill_bg"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/custom_time"
        style="@style/shadow"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginHorizontal="33dp"
        android:layout_weight="1"
        android:background="@drawable/add_med_pill_bg"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="10:00 AM"
        android:textColor="@color/dark10"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/add_med_pill_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingHorizontal="3dp"
        android:paddingVertical="3dp">

        <Button
            android:id="@+id/custom_pill_minus"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:background="@drawable/add_med_pill_minus"
            android:enabled="false"/>

        <EditText
            android:id="@+id/customPill"
            style="@style/shadow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/dark10"
            android:textSize="12sp"
            android:background="@color/transparent"
            android:inputType="number"/>

        <Button
            android:id="@+id/custom_pill_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/add_med_pill_plus" />
    </LinearLayout>

</LinearLayout>