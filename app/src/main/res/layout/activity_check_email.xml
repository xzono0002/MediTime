<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckEmail"
    android:background="@color/light10"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toolbar"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                app:srcCompat="@drawable/back_ios" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/inter_extrabold"
                android:letterSpacing="0.09"
                android:paddingStart="17dp"
                android:text="BACK"
                android:textAllCaps="true"
                android:textAppearance="@style/shadow"
                android:textColor="@color/light"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="46dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot your password?"
                android:fontFamily="@font/inter_extrabold"
                android:textSize="16sp"
                android:textColor="@color/dark10"
                android:letterSpacing=".03"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's find your account, first!"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                android:textColor="@color/dark20"
                android:letterSpacing=".03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the email address that is linked to your account."
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                android:textColor="@color/dark10"
                android:letterSpacing=".03"
                android:layout_marginTop="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="28dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/verEmail"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/light_bg"
                android:fontFamily="@font/montserrat_bold"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:letterSpacing="0.05"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/dark10"
                android:textColorHint="@color/dark20"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/error_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.05"
                android:textColor="@color/error"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/getCode"
            android:layout_width="224dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@drawable/buton"
            style="@style/shadow"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="0.15"
            android:text="GET RESET CODE"
            android:textAllCaps="true"
            android:textAppearance="@style/shadow"
            android:textColor="@color/dark10"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>